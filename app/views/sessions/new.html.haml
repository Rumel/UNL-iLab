%h2 iLab Login
.maincontent#maincontent
  .wdn-grid-set
    .zenbox.wdn-col-three-fifths
      = form_for :session, url: sessions_path do |f|
        %fieldset
          %legend Please fill your username and password
          %ol
            %li
              = f.label :name, required("Name")
              = f.text_field :name
            %li
              = f.label :password, required("Password")
              = f.password_field :password
            %li.reqnote
              %span.required *
              denotes required field
            = f.submit
            %input.wdn-button.wdn-button-white{type: "reset", value: "CLEAR", name: "reset", style: "color: #a5a5a5"}
            %a Fogot Password?

    .wdn-col-two-fifths.wdn-infographic.wdn-infographic-globe-triad{style: "padding-left: 50px"}
      %b Links