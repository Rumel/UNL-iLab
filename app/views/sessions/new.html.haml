%h2 iLab Login
.maincontent#maincontent
  .wdn-grid-set
    .wdn-col-three-fifths
      = form_for :session, url: sessions_path do |f|
        %fieldset
          %legend Please fill your username and password
          %ol
            %li
              = f.label :name, required("Name")
              = f.text_field :name
            %li
              = f.label :password, required("Password")
              = f.password_field :password
            %li.reqnote
              %span.required *
              denotes required field
            = f.submit 'Login'
            %input.wdn-button.wdn-button-{type: "reset", value: "CLEAR", name: "reset", style: "color: #a5a5a5"}
            %a Fogot Password?
            %h4.inline{style: 'float: right'}
              %a{href: "register"}Sign Up

    .wdn-col-two-fifths
      %ul
        %h4 Contacts
        %li.content-li
          %p If you have any problem, please contact us.