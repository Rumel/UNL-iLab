- if flash[:success]
	%script{ type: "text/javascript" }
		WDN.initializePlugin('notice');
	.wdn_notice.affirm
		.close
			%a{ href: '#'} Close this notice
		.message
			%h4 Success Notice
			%span= flash[:success]
- if flash[:error]
	%script{ type: "text/javascript" }
		WDN.initializePlugin('notice');
	.wdn_notice.negate
		.close
			%a{ href: '#'} Close this notice
		.message
			%h4 Error Notice
			%span= flash[:error]

- if !object.nil? && object.errors.any?
	%script{ type: "text/javascript" }
		WDN.initializePlugin('notice');
	.wdn_notice.negate
		.close
			%a{ href: '#'} Close this notice
		.message
			%h4 Error Notice
			- object.errors.full_messages.each do |msg|
				%span= msg
				%br