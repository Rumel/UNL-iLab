- if flash[:success]
	%script{ type: "text/javascript" }
		WDN.initializePlugin('notice');
	.wdn_notice.affirm
		.close
			%a{ href: '#'} Close this notice
		.message
			%h4 Success Notice
			%span= flash[:success]
- elsif flash[:error]
	%script{ type: "text/javascript" }
		WDN.initializePlugin('notice');
	.wdn_notice.negate
		.close
			%a{ href: '#'} Close this notice
		.message
			%h4 Error Notice
			%span= flash[:error]
