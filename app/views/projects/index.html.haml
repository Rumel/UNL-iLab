%h1 Projects
.wdn-main.maincontent#maincontent
  %table.zentable
    %tr
      %thead
        %th Project Name
        %th Sponsor Name
        %th Semester
        %th Initial Capacity
        %th Proposal
        %th Active
        %th Status
        %th
    -@projects.each do |p|
      %tr
      %td= p.project_name
      %td
        %a{href: sponsor_path(p.sponsor)}= Sponsor.find(p.sponsor).full_name
      %td= p.semester
      %td= p.initial_capacity
      %td
        - if p.proposal?
          %a{href: "#{p.proposal.url}"}= p.proposal_file_name
        - else
          No Proposal Upload
      %td= p.active
      %td= p.status
      %td
        %a.wdn-button.wdn-button-triad{ href: project_path(p.id) } Show