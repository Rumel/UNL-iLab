%h1 Student Application
-#= render 'shared/error_messages'
%hr

.zenbox
  =form_tag(student_sponsor_preferences_path(@sponsor.id), remote: true, id: "preference") do
    = hidden_field_tag :authenticity_token, form_authenticity_token
    .inline{style: "width: 35%"}
      =select_tag :id, options_for_select(@projects.map{|project| [project.name, project.id]}), :class => "no-margin", :prompt => "Please select a project"
    .inline
    =submit_tag "Check"
.wdn-main#maincontent
