= form_for @team, url: { action: @url } do |f|
  = render 'shared/error_messages', object: @team
  - if flash[:error]
    %script{ type: "text/javascript" }
      WDN.initializePlugin('notice');
    .wdn_notice.negate
      .close
        %a{ href: '#'} Close this notice
      .message
        %h4 Error Notice
        %p= flash[:error]
  %span.required *
  = f.label :project_id, "Project"
  = f.select :project_id, options_for_select(Project.all.map{ |p| [p.name, p.id] }, selected_key = f.object.project_id)
  %span.required *
  = f.label :name, "Name"
  = f.text_field :name
  = f.submit "Submit"