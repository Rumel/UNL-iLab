= form_for @instructor, url: { action: @url } do |f|
  - if current_user.utype == "instructor"
    %legend If you want to update/add semester, please contact admin

  = render 'shared/error_messages', object: @instructor
  %span.required *
  = f.label :email, "Email"
  = f.text_field :email
  %span.required *
  = f.label :first_name, "First Name"
  = f.text_field :first_name
  %span.required *
  = f.label :last_name, "Last Name"
  = f.text_field :last_name
  .bp1-wdn-col-one-third
    %span.required *
    = f.label "Class"
    %ol
      %li
        = f.radio_button :classname, "CSCE 486/488"
        = f.label :classname_csce_486488, "CSCE 486/488"
      %li
        = f.radio_button :classname, "CSCE 487/489"
        = f.label :classname_csce_487489, "CSCE 487/489"
  .bp1-wdn-col-two-thirds
    %span.required *
    = f.label "Semester"
    - @year = Time.now.year
    - @semester_fall = "semester_fall_#{@year}"
    - @semester_spring = "semester_spring_#{@year}"
    %ol
      %li
        = f.radio_button :semester, "Fall #{@year}"
        = f.label @semester_fall, "Fall #{@year}"
      %li
        = f.radio_button :semester, "Spring #{@year}"
        = f.label @semester_spring, "Spring #{@year}"
  %ol
    %li
    %span.required *
    denotes required field
  = f.submit "Submit"