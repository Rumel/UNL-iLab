%h1 Instructors
= render 'shared/error_messages'
.wdn-main#maincontent
    %table.zentable
        %tr
            %thead
                %th First Name
                %th Last Name
                %th Email
                %th Classname
                %th Semester
                %th
        - @instructors.each do |i|
            %tr
                %td= i.first_name
                %td= i.last_name
                %td
                    %a{href: "mailto:#{i.email}"}= i.email
                %td= i.classname
                %td= i.semester
                %td
                    %a.wdn-button.wdn-button-triad{ href: instructor_path(i.id) } Show