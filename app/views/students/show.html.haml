%h1
	%strong= @student.full_name
- if @student.avatar
	= image_tag @student.avatar.url, size: "150"
- if @student.team
	%h4= "Team: #{@student.team_name}"
%h4= "Major: #{@student.major}"
%h4= "Semester: #{@student.semester}"
%h4= "Availability: #{pluralize(@student.availability, "semester")}"
%a.wdn-button.wdn-button-triad{ href: edit_student_path(@student.id) } Edit